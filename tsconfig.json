{
  "compilerOptions": {
    "alwaysStrict": true,
    "outDir": "./dist/",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "lib": [
      "es6",
      "es2016.array.include",
      "es2017.object",
      "dom"
    ],
    "baseUrl": "src",
    "paths": {
      "client/*": [
        "main/app/client/*"
      ],
      "idam/*": [
        "main/app/idam/*"
      ],
      "logging/*": [
        "main/app/logging/*"
      ],
      "router/*": [
        "router/*"
      ],
      "routes/*": [
        "routes/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ]
  }
}
