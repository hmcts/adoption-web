{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "lib": [
      "es6",
      "es2017.object",
      "dom"
    ],
    "baseUrl": "src/main",
    "paths": {
      "client/*": [
        "app/client/*"
      ],
      "idam/*": [
        "app/idam/*"
      ],
      "logging/*": [
        "app/logging/*"
      ],
      "paths": [
        "app/paths"
      ],
      "router/*": [
        "router/*"
      ],
      "routes/*": [
        "routes/*"
      ],
      "common/*": [
        "common/*"
      ],
      "utils/*": [
        "app/utils/*"
      ],
    },
    "typeRoots": [
      "./node_modules/@types"
    ]
  }
}