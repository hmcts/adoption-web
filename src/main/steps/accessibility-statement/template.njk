{% extends "common/page.njk" %}

{% block page_content %}
  <h1 class="govuk-heading-l">{{ title }}</h1>

  <h2 class="govuk-heading-m">{{ statement }}</h2>
  <p class="govuk-body">{{ websiteRanBy }}</p>
  <p class="govuk-body">{{ asManyAsPossible }}</p>
  <ul class="govuk-list govuk-list--bullet">
    <li>{{ asManyAsPossibleColours }}</li>
    <li>{{ asManyAsPossibleZoom }}</li>
    <li>{{ asManyAsPossibleKeyboard }}</li>
    <li>{{ asManyAsPossibleSpeech }}</li>
    <li>{{ asManyAsPossibleListen }}</li>
  </ul>
  <p class="govuk-body">{{ abilityNet | safe }}</p>

  <h3 class="govuk-heading-s">{{ howAccessible }}</h3>
  <p class="govuk-body">{{ somePartsNot }}</p>
  <ul class="govuk-list govuk-list--bullet">
    <li>{{ somePartsNotPDF }}</li>
    <li>{{ somePartsNotColour }}</li>
    <li>{{ somePartsNotTextToSpeech }}</li>
    <li>{{ somePartsNotEveryLink }}</li>
    <li>{{ somePartsNotTextForHyperlinks }}</li>
  </ul>

  <h3 class="govuk-heading-s">{{ whatToDoIfYouCanAccessParts }}</h3>
  <p class="govuk-body">{{ needMoreInformation }}</p>
  <ul class="govuk-list govuk-list--bullet">
    <li>{{ email | safe }}</li>
    <li>{{ phone }}</li>
  </ul>
  <p class="govuk-body">{{ considerYourRequest }}</p>

  <h3 class="govuk-heading-s">{{ reportingAccessibility }}</h3>
  <p class="govuk-body">{{ improveAccessibility | safe }}</p>

  <h3 class="govuk-heading-s">{{ enforcementProcedure }}</h3>
  <p class="govuk-body">{{ humanRightsCommission | safe }}</p>
  <p class="govuk-body">{{ notHappy | safe }}</p>

  <h2 class="govuk-heading-m">{{ technicalInfo }}</h2>
  <p class="govuk-body">{{ hmctsIsCommitted }}</p>
  <p class="govuk-body">{{ websiteIsPartiallyCompliant | safe }}</p>

  <h2 class="govuk-heading-m">{{ nonAccessibleContent }}</h2>
  <p class="govuk-body">{{ contentListedBelow }}</p>

  <h3 class="govuk-heading-s">{{ accessibilityRegulations }}</h3>

  <h3 class="govuk-heading-s">{{ issuesWithLinks }}</h3>
  <p class="govuk-body">{{ issuesWithLinksDescription }}</p>

  <h3 class="govuk-heading-s">{{ issuesWithHeadings }}</h3>
  <p class="govuk-body">{{ issuesWithHeadingsDescription }}</p>

  <h3 class="govuk-heading-s">{{ issuesWithPDF }}</h3>
  <p class="govuk-body">{{ issuesWithPDFDescription }}</p>

  <h3 class="govuk-heading-s">{{ issuesWithColour }}</h3>
  <p class="govuk-body">{{ issuesWithColourDescription }}</p>

  <h3 class="govuk-heading-s">{{ issuesWithLanguage }}</h3>
  <p class="govuk-body">{{ issuesWithLanguageDescription }}</p>

  <h3 class="govuk-heading-s">{{ issuesWithOther }}</h3>
  <p class="govuk-body">{{ issuesWithOtherDescription1 }}</p>
  <p class="govuk-body">{{ issuesWithOtherDescription2 }}</p>
  <p class="govuk-body">{{ issuesWithOtherDescription3 }}</p>
  <p class="govuk-body">{{ issuesWithOtherDescription4 }}</p>

  <h2 class="govuk-heading-m">{{ improvingAccessibility }}</h2>
  <p class="govuk-body">{{ planning }}</p>

  <p class="govuk-body">{{ statementPrepared }}</p>
{% endblock %}
