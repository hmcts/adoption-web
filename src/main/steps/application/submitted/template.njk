{% from "govuk/components/panel/macro.njk" import govukPanel %}

{% extends "common/page.njk" %}
{% block content %}
    <div class="govuk-width-container">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <form action="/version-1/check-pay-and-submit/confirmation" method="post" class="form">
                    {{  govukPanel({
                            titleText: title,
                            html: referenceNumberAndChildName
                        })
                    }}
                    <p class="govuk-body">{{ emailSentConfirmation }}</p>
                    <p class="govuk-body">
                        <a href="/download-summary?_csrf={{ csrfToken }}" class="govuk-link">{{ printApplication }}</a>
                    </p>
                    <h2 class="govuk-heading-m">{{ nextStep }}</h2>
                    <p class="govuk-body">{{ line1 }}</p>
                    <p class="govuk-body">{{ line2 }}</p>
                    <p class="govuk-body">{{ line3 }}</p>
                    <p class="govuk-body">{{ line4 | safe }}</p>
                    <p class="govuk-body">{{ line5 }}</p>
                    <h2 class="govuk-heading-m">{{ multipleChildren }}</h2>
                    <p class="govuk-body">{{ line6 }}</p>
                    <p class="govuk-body">{{ line7 }}</p>
                    <p class="govuk-body">{{ line8 }}</p>
                    <p class="govuk-body">{{ line9 }}</p>
                    <p class="govuk-body">
                      <a href="/new-application-redirect" class="govuk-link">{{ newApplication }}</a>
                    </p>
                </form>
                {% block contactUs %}
                    {% include "common/form/contactForHelp.njk"%}
                {% endblock %}
                <div class="govuk-notification-banner" role="region" aria-labelledby="govuk-notification-banner-title" data-module="govuk-notification-banner" style="margin-bottom:30px;">
                    <div class="govuk-notification-banner__content">
                        <h2 class="govuk-heading-m">{{ hearYourThoughts }}</h2>
                        <p class="govuk-body">{{ completeSurvey }}</p>
                        <p class="govuk-body">
                            <a href="https://www.smartsurvey.co.uk/s/SurveyExit/?service=Adoption" class="govuk-link">{{ leaveFeedback }}</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
