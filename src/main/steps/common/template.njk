{% extends "./page.njk" %}

{% block page_content %}
  {% if title %}
    <h1 class="govuk-heading-l govuk-!-margin-bottom-0">{{ title }}</h1>
  {% endif %}
  {% if line1 %}
    <div class="govuk-hint govuk-!-margin-bottom-3">{{ line1 }}</div>
  {% endif %}
  {% if line2 %}
    <p class="govuk-body govuk-!-margin-bottom-6">{{ line2 }}</p>
  {% endif %}
{% endblock %}