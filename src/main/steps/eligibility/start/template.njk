{% from "govuk/components/inset-text/macro.njk" import govukInsetText %}
{% extends "common/page.njk" %}
{% block content %}

  <div class="govuk-width-container">

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        <h1 class="govuk-heading-xl">{{ title }}</h1>

        {{ govukInsetText( {text: line1 | safe }) }}
        
        <p class="govuk-body">{{ line2 }}</p>
        <p class="govuk-body">{{ line3 }}</p>

        <h2 class="govuk-heading-m">{{heading1}}</h2>
        <ol class="govuk-list">
          <li>
            <h3 class="govuk-heading-s">1. {{subheading1}}</h3>

            <p class="govuk-body">{{line4}}</p>
            <p class="govuk-body">{{line5}}</p>
            <p class="govuk-body">{{line6}}</p>
            <p class="govuk-body">{{line7}}</p>
            <p class="govuk-body">{{line8}}</p>
          </li>
          <li>
            <h3 class="govuk-heading-s">2. {{subheading2}}</h3>

            <p class="govuk-body">{{line9}}</p>
            <p class="govuk-body">{{line10}}</p>
            <p class="govuk-body">{{line11}}</p>
          </li>
          <li>
            <h3 class="govuk-heading-s">3. {{subheading3}}</h3>

            <p class="govuk-body">{{line12}}</p>
            <p class="govuk-body">{{line13}}</p>
            </li>
        </ol>
        <a href="/eligibility/multiple-children" role="button" draggable="false" class="govuk-button govuk-!-margin-top-2 govuk-!-margin-bottom-8 govuk-button--start" data-module="govuk-button">
          {{startnow}}
          <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
            <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z"/>
          </svg>
        </a>
    </div>
  </div>

</div>

{% endblock %}